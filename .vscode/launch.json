{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "hostname": "0.0.0.0",
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}"
            },
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 2048,
                "max_depth": 4
            }
        }
    ]
}